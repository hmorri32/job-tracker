
  <h3>All Categories</h3>

  <% @categories.each do |category| %>
    <h2><%= link_to category.title, category_path(category) %></h2>
    <%= link_to "Edit",   edit_category_path(category) %>
    <%= link_to "Delete", category_path(category), method: :delete %>
  <% end %>

