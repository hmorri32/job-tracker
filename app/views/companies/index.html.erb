<div class='container'>
  <h3>All Companies</h3>
  <% @companies.each do |company| %>
    <div class='companies'>
      <%= link_to company.name, company_path(company), class: 'coolstuff' %>
      <%= link_to "Edit", edit_company_path(company) %>
      <%= link_to "Delete", company_path(company), method: "delete" %>
    </div>
  <% end %>
  <h3>(or create a <%= link_to 'new company',new_company_path %>)</h3>
</div>